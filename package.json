{
	"name": "radio",
	"version": "0.1.0",
	"private": true,
	"author": {
		"name": "Alijonov Mukhammaddiyor",
		"email": "alijonov@kaist.ac.kr"
	},
	"description": "Electron Radio App",
	"homepage": "./",
	"main": "./electron/main.js",
	"dependencies": {
		"@testing-library/jest-dom": "^5.16.1",
		"@testing-library/react": "^12.1.2",
		"@testing-library/user-event": "^13.5.0",
		"hls.js": "^1.1.4-0.canary.8146",
		"jsonp": "^0.2.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-icons": "^4.3.1",
		"react-router-dom": "^6.2.1",
		"react-scripts": "5.0.0",
		"web-vitals": "^2.1.3"
	},
	"scripts": {
		"electron": "electron .",
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"electron:start": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electronmon .\"",
		"preelectron-pack": "npm run build",
		"electron-pack": "electron-builder -w",
		"postinstall": "electron-builder install-app-deps"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"build": {
		"appId": "com.ai-nomis.mbcapp",
		"productName": "IMBC mini",
		"copyright": "Copyright Â© 2022 Mukhammaddiyor Alijonov",
		"mac": {
			"icon": "./electron/icon.png",
			"category": "public.entertainment.utilities"
		},
		"win": {
			"icon": "./electron/icon.png",
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				}
			]
		},
		"files": [
			"build/**/*",
			"node_modules/**/*",
			"./electron/main.js"
		],
		"directories": {
			"buildResources": "/src/assets"
		},
		"extraMetadata": {
			"main": "electron/main.js"
		}
	},
	"resolutions": {
		"mini-css-extract-plugin": "~2.4.5"
	},
	"browserslist": {
		"production": [
			"last 1 electron version"
		],
		"development": [
			"last 1 electron version"
		]
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"electron": "^16.0.7",
		"electron-builder": "^22.14.5",
		"electronmon": "^2.0.2",
		"mini-css-extract-plugin": "2.4.5"
	}
}
